generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String   @unique
  password String
  Folder   Folder[]
}

model Folder {
  id     String @id @default(uuid())
  name   String
  files  File[]
  author User   @relation(fields: [userId], references: [id])
  userId String
}

model File {
  id          String   @id @default(uuid())
  name        String
  updloadedAt DateTime
  size        Int
  Folder      Folder   @relation(fields: [folderId], references: [id])
  folderId    String
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}
